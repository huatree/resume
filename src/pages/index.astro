---
import Layout from "../layouts/Layout.astro";
import Profile from "./Profile.md";
import "../assets/iconfont.css";
import config from "../../meta.config";

const { name, job, year, weixin, phone, email, city, github } = config.beseInfo;
---

<Layout title="Welcome to resume.">
    <div class="mt-6 max-w-screen-lg md:flex mx-auto">
        <div class="md:w-1/3 p-2 relative">
            <div class="md:fixed">
                <div class="md:block">
                    <div class="flex justify-center">
                        <img
                            class="h-32 w-32 rounded-full mx-auto mx-4"
                            src="https://www.huatree.top/images/avatar-huatree.jpg"
                        />
                    </div>
                    <div
                        class="mb-12 text-center mt-4 justify-center items-center"
                    >
                        <h1 class="text-2xl text-xl text-gray-800 font-bold">
                            {name}
                        </h1>
                        <div class="md:text-lg text-gray-600">{job}</div>
                        <div class="md:text-lg text-gray-600">{year}</div>
                        <div class="text-gray-600 md:hidden mt-1">
                            (wx: {weixin})
                        </div>
                    </div>
                </div>
                <div class="mx-4 my-4 hidden md:block">
                    <div class="my-5 text-lg text-gray-600 flex">
                        <div class="mr-2">
                            <span class="iconfont icon-wechat"></span>
                        </div>
                        {weixin}
                    </div>
                    <div class="my-5 text-lg text-gray-600 flex">
                        <div class="mr-2">
                            <span class="iconfont icon-Phoneshouji"></span>
                        </div>
                        {phone}
                    </div>
                    <div class="my-5 text-lg text-gray-600 flex">
                        <div class="mr-2">
                            <span class="iconfont icon-email"></span>
                        </div>
                        {email}
                    </div>
                    <div class="my-5 text-lg text-gray-600 flex">
                        <div class="mr-2">
                            <span class="iconfont icon-position"></span>
                        </div>
                        {city}
                    </div>
                    <a
                        href="http://github.com/huatree"
                        class="my-5 flex"
                        target="_blank"
                    >
                        <div class="mr-2">
                            <span class="iconfont icon-github"></span>
                        </div>
                        <span class="text-blue-500">{github}</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="md:w-2/3 p-2 w-full text-gray-700">
            <Profile />
        </div>
    </div>
</Layout>
